<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <schema id="com.github.dirli.budgie-sys-monitor-applet">
    <key type="b" name="show-title">
      <default>true</default>
      <summary>Show Title</summary>
      <description>Whether to display headlines on the panel</description>
    </key>
    <key type="b" name="show-ram">
      <default>false</default>
      <summary>Show Ram</summary>
      <description>Whether to show ram info</description>
    </key>
    <key type="b" name="show-cpu">
      <default>true</default>
      <summary>Show CPU</summary>
      <description>Whether to show cpu info</description>
    </key>
    <key type="i" name="update-interval">
      <default>2</default>
      <summary>Update Interval</summary>
      <description>How many seconds to wait before updating data</description>
    </key>
  </schema>
</schemalist>
